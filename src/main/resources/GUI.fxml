<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="root" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/8.0.121"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gt22.samaritangen.Controller">
    <TextField fx:id="message"/>
    <ComboBox fx:id="colors"/>
    <CheckBox fx:id="gif">GIF Output</CheckBox>
    <CheckBox fx:id="type">'Typing' output</CheckBox>
    <CheckBox fx:id="offset">Offset words (Like in serial)</CheckBox>
    <HBox>
        <Label>Delay between frames: </Label>
        <TextField fx:id="delay" disable="true">700</TextField>
    </HBox>
    <ImageView fx:id="samaritan"/>
    <HBox>
        <TextField fx:id="filename"/>
        <Button fx:id="save">Save</Button>
        <Label fx:id="res"/>
    </HBox>
</VBox>
